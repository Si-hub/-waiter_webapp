<body>
    <div class="booked-heading">

        <h1>Booked shifts</h1>
    </div>

    <div class="keyColors">
        <div>
            <div class="keys" style="background-color: orange;"></div>Less than 3 waiters
        </div>
        <div>
            <div class="keys" style="background-color: green;"></div>Enough Waiters
        </div>
        <div>
            <div class="keys" style="background-color: red;"></div>More than 3 waiters
        </div>

    </div>

    <div class="topClear">
        <a href="/clear">
            <button type="submit" id="clear"><i class="icon-trash"></i><i class="fas fa-trash-restore"></i>
                Reset</button>
        </a>
    </div>

    <div class="box ">
        <div class="moveDown">

            <table class="roundedCorners">



                {{#each groupdays}}

                <tr>
                   
                    <th class="{{days}}">{{this.dayArray}}</th>
                    <td>{{this.waiterName}}</td>
                </tr>
                
                {{/each}}

            </table>

        </div>
    </div>

</body>

